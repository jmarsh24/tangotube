<div style="height: 80vh; width: 100%; max-width: 24rem; display: flex; flex-direction: column; justify-content: center; align-items: center; font-size: var(--sl-font-size-small); color: var(--sl-color-neutral-500);">
  <div style="display: flex; justify-content: center;">
    <div style="font-size: var(--sl-font-size-2x-large); color: var(--sl-color-neutral-1000);">
      <h4>Change your password</h4>
    </div>
  </div>
  <div style="display: flex; flex-direction: column; gap: 16px; width: 100%; max-width: 24rem;">
    <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }  do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.hidden_field :email %>
      <%= f.password_field :password, autocomplete: "new-password", autofocus: true, style: "margin-bottom: 8px;" %>
      <%= f.submit "Change my password", class: "primary-button", style: "width: 100%; margin-top: 8px;" %>
    <% end %>
  </div>
