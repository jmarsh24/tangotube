.scrollable-bar.scrollable-bar--vote id="#{dom_id(video)}_vote"
  = render "shared/like_button", likeable: video
  .modal-share
    = link_to modal_path(share_video_path(video), size: :small), class: "button button--vote button--icon-square-and-arrow-up button--icon-left" do
      = t(".share_button")
  .native-share
    button class="button button--vote button--icon-square-and-arrow-up button--icon-left" data-controller="share" data-action="click->share#share" data-share-url="#{video_url(video)}"
      = t(".share_button")
  = render "shared/feature_button", featureable: video if current_user&.admin?
  = link_to "", "vnd.youtube://www.youtube.com/watch?v=#{video.youtube_id}", class: "button icon--youtube youtube-app-link"
  = link_to "", "https://youtube.com/watch?v=#{video.youtube_id}", target: "_blank", class: "button icon--youtube youtube-web-link"
  - if current_user&.admin?
    = button_to t(".reprocess"), process_metadata_video_path(video), class: "button button--vote button--icon-gear button--icon-left"
    = button_to t(".hide"), hide_video_path(video), class: "button button--vote button--icon-eye-slash button--icon-left"
