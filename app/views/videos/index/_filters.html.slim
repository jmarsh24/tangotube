.filters-section
  .dropdown
    = button_to t(".filters"), class: (filtering_params.present? ? "active" : "")
  div style="background-color: var(--sl-color-neutral-50); padding-bottom: 12px;"
    #mobile-filters
      = turbo_frame_tag :filters, src: filters_videos_path(filtering_params)
  = render partial: "videos/index/filter-sorting/filtering"
div
  = button_to "Sorting", class: (filtering_params.present? ? "active" : ""), id: "button-sorting", class: "white-button", class: (sorting_params.present? ? "active" : "")
  div style="background-color: var(--sl-color-neutral-50); padding-bottom: 12px;"
  div
    = render partial: "videos/index/filter-sorting/sorting"
#desktop-filters
  = turbo_frame_tag "filters", src: filters_videos_path(filtering_params)
#button-clear-all
  - if filtering_params.present? || sorting_params.present?
    = button_to t(".clear_all"), class: "active", id: "button-clear-all", class: "white-button", "data-controller": "filter", "data-action": "click-filter#filter", "data-filter-clear-value": "1"
- if current_user.try(:admin?) && filtering_params.has_key?(:channel) && Channel.find_by(channel_id: filtering_params[:channel]).active?
  form action="#{channel_deactivate_path(filtering_params[:channel])}" method="post" data-turbo="false"
    button type="submit" variant="danger"
      Deactivate


