- if videos.present?
  .recommended-videos-card data-controller="reveal" data-reveal-hidden-class="active" data-reveal-target="item"
    .recommended_videos__body data-collapsible-target="content"
      .recommended-videos-card__header
        h2.heading-2.heading-2--bold = header
      - videos.each do |video|
        .recommended-videos-container class=(video.youtube_id == @video.youtube_id ? "active" : "")
          - if video.youtube_id == @video.youtube_id
            div
              .thumbnail--recommended data-duration="= hd_duration_data(video) "
                = image_tag(video.thumbnail_url)
          - else
            = link_to watch_path(v: video.youtube_id), { 'data-turbo-frame': "_top" } do
              .thumbnail--recommended data-duration="= hd_duration_data(video) "
                = image_tag(video.thumbnail_url)
          .video-bottom-section
            .video-card__details
              .video-card__title
                - if video.youtube_id == @video.youtube_id
                  = primary_title(video.display.dancer_names, video.title, video.display.any_song_attributes, video.youtube_id)
                - else
                  = link_to_primary_title(video.display.dancer_names, video.title, video.display.any_song_attributes, video.youtube_id)
              .video-card__song
                - if video.display.any_song_attributes.present?
                  = link_to_song(video.display.el_recodo_attributes, video.display.external_song_attributes, video)
              .video-card__event
                = link_to video.event.title.titleize, root_path(event_id: video.event.id), { 'data-turbo-frame': "_top" } if video.event.present?
              .video-card__channel
                = link_to image_tag(video.channel.thumbnail_url, class: 'video-card__details__channel__icon'), root_path(channel: video.channel.channel_id), { 'data-turbo-frame': "_top" } if video.channel.thumbnail_url.present?
                = link_to channel_title(video), root_path(channel: video.channel.channel_id), { class: "video-card__channel__title", 'data-turbo-frame': "_top" } if video.channel.title.present?
              .video-card__metadata
                = formatted_metadata(video)
    - if videos.size > 3
      button type="button" class="button button--secondary button--block" data-action="click->reveal#toggle"
        .icon.icon--arrow-down




